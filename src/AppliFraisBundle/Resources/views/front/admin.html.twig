{% extends '@AppliFrais/base_front.html.twig' %}

    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset ('public/css/style.css') }}">
    {% endblock %}


{% block body %}

    {% form_theme formAdmin 'bootstrap_4_layout.html.twig' %}
    <div class="container">
        <div class="connexion">
            <h1>Connectez-vous</h1>
            <div class="formulaire">

                {{ form_start(formAdmin) }}
                <div class="form-group">
                    {{ form_row(formAdmin.compte, {'label':'Identifiant','attr' : {'placeholder': 'Identifiant...'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(formAdmin.mdp, {'label':'Mot de passe','attr' : {'placeholder': 'Mot de passe...'}}) }}
                </div>

                <button type="submit" class="btn btn-success">Connexion</button>
                {{ form_end(formAdmin) }}
            </div>
        </div>
    </div>
{% endblock %}