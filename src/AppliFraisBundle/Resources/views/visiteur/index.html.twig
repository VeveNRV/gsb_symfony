{% extends '@AppliFrais/base_front.html.twig' %}

    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset ('public/css/style.css') }}">
    {% endblock %}

{% block nav %}
    <form class="form-inline">
        <a class="nav-link" href="">Fiche du mois</a>
        <a class="nav-link" href="">Mes fiches</a>
    </form>
{% endblock %}

{% block body %}
    <div class="container-fluid">
    <div class="alert alert-info" role="alert" style="margin-top:30px;">
        Sur cette page vous pouvez modifier votre fiche de frais du mois. Les comptes sont clôturés à la fin du mois.
    </div>
    <div class="fiche-du-mois">
        <h1>Fiche de frais du Décembre 2019.</h1>
        <div class="row">
            <div class="col-md-6 frais">
                <h2>Frais forfaitisés</h2>

                {% form_theme formForfait 'bootstrap_4_layout.html.twig' %}

                <div class="formulaire">

                    {{ form_start(formForfait) }}

                    <div class="form-group">
                        {{ form_row(formForfait.listeFrais, {'label':'Type de frais'}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(formForfait.quantite, {'label':'Quantité'}) }}
                    </div>

                    <button type="button" class="btn btn-primary">Valider</button>
                    {{ form_end(formForfait) }}

                </div>
            </div>

            <div class="col-md-6 frais">
                <h2>Frais non-forfaitisés</h2>

                {% form_theme formHorsForfait 'bootstrap_4_layout.html.twig' %}

                <div class="formulaire">

                    {{ form_start(formHorsForfait) }}

                    <div class="form-group">
                        {{ form_row(formHorsForfait.nom, {'label':'Libelle'}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(formHorsForfait.prix, {'label':'Prix'}) }}
                    </div>

                    <button type="button" class="btn btn-primary">Valider</button>
                    {{ form_end(formHorsForfait) }}

                </div>
            </div>


            </div>
        </div>


    </div>
{% endblock %}