{% trans_default_domain 'FOSUserBundle' %}

    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset ('public/css/login.css') }}">
    {% endblock %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">
    <div class="connexion">
        <center><h1 style="margin: 20px 0;">Connexion</h1></center>
        <div class="formulaire">

            <form action="{{ path("fos_user_security_check") }}" method="post">

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans }}</label><br>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                </div>

                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}</label><br>
                    <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                </div>

                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>

                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

            </form>
        </div>
    </div>
</div>